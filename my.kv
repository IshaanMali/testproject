<RootWidget>:
    inputButton: inputButton
    inputContent: inputContent
    outputContent: outputContent


    orientation: "vertical"

    BoxLayout:
        orientation: "vertical"
        size_hint: 1,0.25

        Label:
            text: "Shopping List"
            size_hint: 1,0.3

        BoxLayout:
            orientation: "horizontal"

            Button:
                id: inputButton
                size_hint: 0.25,1
                text: "Add"
                on_press:
                    root.add_item()

            TextInput:
                id: inputContent
                multiline: False

    # Don't add <>
    ListWidget:
        id: outputContent
        viewclass: "Label"
        orientation: "vertical"

        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 0.4, None
            size_hint_y: None
            height: self.minimum_height
            orientation: "vertical"